{
  "name": "rn-expo-core",
  "version": "1.0.0",
  "main": "index.ts",
  "types": "src/index.ts",
  "description": "A reusable component utility package for cross-platform React Native Expo projects with theming, layout tracking, and responsive design utilities",
  "keywords": [
    "react-native",
    "expo",
    "theming",
    "responsive",
    "layout",
    "utilities",
    "components"
  ],
  "author": "kingsly_mokgwathi",
  "license": "MIT",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "expo lint",
    "lint:fix": "expo lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "docs": "typedoc",
    "docs:build": "typedoc --out docs/api",
    "build:web": "npx expo export -p web --output-dir web-build",
    "build:docs": "npm run docs:build && npm run build:web"
  },
  "dependencies": {
    "expo": "~54.0.25",
    "expo-clipboard": "~8.0.7",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-paper": "^5.12.3",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.0",
    "babel-preset-expo": "^54.0.7",
    "eslint": "^9.0.0",
    "eslint-config-expo": "~10.0.0",
    "husky": "^9.1.7",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.13",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0",
    "standard-version": "^9.5.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kingslytshepiso/rn-expo-core.git"
  },
  "files": [
    "src",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  }
}
